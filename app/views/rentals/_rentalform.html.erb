<div class="container">
 <div class="form-wrapper" style="width: 230px; height: 350px; margin: 0 auto;">
    <h2>Rental Dates</h2>

    <%= simple_form_for([@game, @rental]) do |f| %>
      <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.button :submit, "request to rent", class: "nav-item nav-btn" %>
    <% end %>
  </div>
</div>
